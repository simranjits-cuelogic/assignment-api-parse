<div class="login-box">
  <%= form_for :user, url: create_signup_sessions_path, :html => {:class => ''} do |f| -%>
    <div class="panel panel-default">
      <div class="panel-heading"><b>Sign up</b></div>

      <div class="">
        <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
        <% end %>
      </div>

      <div class="panel-body">
        <div class="form-group has-primary has-feedback">
          <label class="control-label" for="email">Email <span class="regForm text-danger">*</span></label>
          <%= f.text_field :email, class: "form-control" %>
          <span class="glyphicon glyphicon-user form-control-feedback" aria-hidden="true"></span>
        </div>

        <div class="form-group has-primary has-feedback">
          <label class="control-label" for="password">Password <span class="regForm text-danger">*</span></label>
          <%= f.password_field :password, class: "form-control" %>
          <span class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></span>
        </div>

        <div class="form-group has-primary has-feedback">
          <label class="control-label" for="password_confirmation">Password <span class="regForm text-danger">*</span></label>
          <%= f.password_field :password_confirmation, class: "form-control" %>
          <span class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></span>
        </div>

        <div class="form-group has-primary has-feedback">
          <label class="control-label" for="name">Name <span class="regForm text-danger">*</span></label>
          <%= f.text_field :name, class: "form-control" %>
          <span class="glyphicon glyphicon-user form-control-feedback" aria-hidden="true"></span>
        </div>

        <div class="form-group has-primary has-feedback">
          <label class="control-label" for="city">City <span class="regForm text-danger">*</span></label>
         <%= f.select :city, options_for_select(options_for_city.map{ |c| [c['city'], c['id']] } ),{}, class: "form-control" %>
        </div>

      </div>
      <div class="panel-footer">
        <%= f.submit "Signup", :disable_with => 'Submiting...', class: "btn btn-success login-btn" %>
      </div>
    </div>
  <% end -%>
</div>